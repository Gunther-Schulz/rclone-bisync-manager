[Unit]
Description=RClone BiSync Manager Daemon
After=network.target

[Service]
ExecStart=/usr/bin/rclone-bisync-manager.py daemon start
ExecStop=/usr/bin/rclone-bisync-manager.py daemon stop
Restart=on-failure
StandardOutput=append:/path/to/your/rclone-bisync-manager.log
StandardError=append:/path/to/your/rclone-bisync-manager-error.log

[Install]
WantedBy=default.target

